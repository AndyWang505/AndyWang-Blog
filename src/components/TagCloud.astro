---
import { getCollection } from 'astro:content';
import { calculateTagSize } from '../utils/tagSizeCalculator';
import { getRandomTagColor } from '../utils/tagColorGenerator';

const blog = await getCollection('blog');
const tagsSet = new Set();
blog.forEach(post => {
  post.data.tags.forEach(tag => {
    tagsSet.add(tag);
  });
});
const tagsArray = Array.from(tagsSet);

const tagCounts = new Map();
blog.forEach(post => {
  post.data.tags.forEach(tag => {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  });
});

const counts = Array.from(tagCounts.values()).sort((a, b) => a - b);

const tagColors = tagsArray.map(tag => ({
  tag,
  color: getRandomTagColor(),
  size: calculateTagSize(tagCounts.get(tag), counts)
}));
---

<div class="w-full rounded-lg bg-white dark:bg-zinc-800 drop-shadow p-6">
  <h3 class="mb-2">
    <a class="flex items-center gap-1 dark:text-neutral-300" href="/post/tag/">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M6.5 19C4.01472 19 2 16.9853 2 14.5C2 12.1564 3.79151 10.2313 6.07974 10.0194C6.54781 7.17213 9.02024 5 12 5C14.9798 5 17.4522 7.17213 17.9203 10.0194C20.2085 10.2313 22 12.1564 22 14.5C22 16.9853 19.9853 19 17.5 19C13.1102 19 10.3433 19 6.5 19Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      Tag cloud
    </a>
  </h3>
  <ul>
    {tagColors.map(({ tag, color, size }) => (
      <li class={`inline-block dark:hover:text-neutral-300 ${color} ${size}`}>
        <a href={`/post/tag/${tag}`}>&nbsp{tag}&nbsp</a>
      </li>
    ))}
  </ul>
</div>