---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../config/site';
import ThemeToggle from './ThemeToggle';
import HamburgerMenu from './HamburgerMenu.astro';
---

<header class="bg-white/80 dark:bg-zinc-900/80 dark:text-zinc-100 sticky top-0 z-50 drop-shadow border-b border-gray-200/20 dark:border-zinc-700/50 rounded-b-lg">
  <nav class="max-w-6xl py-2 pl-4 mx-auto">
    <div class="flex items-center gap-6">
      <!-- Home Link with Icon -->
      <a href="/" class="flex items-center gap-2 text-md font-semibold italic py-1 hover:opacity-80">
        <span class="font-serif tracking-wider">{SITE_TITLE}</span>
      </a>
      
      <!-- Desktop Navigation Links with Icons -->
      <div class="hidden lg:flex items-center gap-4">
        <HeaderLink href="/about" class="flex items-center gap-2 px-2 py-1 rounded-md hover:text-blue-600 dark:hover:text-blue-400">
          <span class="font-medium text-sm">About</span>
        </HeaderLink>
        <HeaderLink href="/archive" class="flex items-center gap-2 px-2 py-1 rounded-md hover:text-blue-600 dark:hover:text-blue-400">
          <span class="font-medium text-sm">Archive</span>
        </HeaderLink>
        <HeaderLink href="/archive/category" class="flex items-center gap-2 px-2 py-1 rounded-md hover:text-blue-600 dark:hover:text-blue-400">
          <span class="font-medium text-sm">Category</span>
        </HeaderLink>
        <HeaderLink href="/archive/tag" class="flex items-center gap-2 px-2 py-1 rounded-md hover:text-blue-600 dark:hover:text-blue-400">
          <span class="font-medium text-sm">Tags</span>
        </HeaderLink>
      </div>
    </div>
    <div class="flex items-center gap-2">
      <ThemeToggle client:visible />
      <HamburgerMenu />
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px); /* Safari 支援 */
  }
  
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  nav a {
    text-decoration: none;
  }
  
  nav a.active {
    font-weight: bolder;
  }
  
  /* Ensure SVG icons inherit text color for proper theming */
  svg {
    color: inherit;
  }
</style>
