---
import Layout from '../../layouts/Layout.astro';
---

<html lang="zh-TW">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Weiwei Link</title>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/favicon-16x16.png" type="image/png" />
    <!-- 圖片預載入 -->
    <link rel="preload" as="image" href="https://github.com/AndyWang505/link/blob/main/img/Suisei03.png?raw=true" fetchpriority="high" />
    <link rel="preload" as="image" href="https://avatars.githubusercontent.com/u/71600455?v=4" fetchpriority="high" />

    <!-- 字體優化載入 -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;1,400&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      media="print" onload="this.media='all'"
    />
    <noscript><link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" /></noscript>

    <style>
      html,
      body,
      a,
      h1,
      h2,
      h3,
      h4,
      h5,
      h6,
      p,
      span,
      ul,
      ol,
      li {
        margin: 0;
        padding: 0;
        font: inherit;
        font-family: 'Playfair Display', cursive;
        font-weight: 500;
        vertical-align: baseline;
        text-decoration: none;
        list-style: none;
        line-height: 1.5;
        color: rgb(235, 235, 235);
      }

      img {
        display: inline-block;
      }

      main {
        position: relative;
        height: 100vh;
        display: flex;
        overflow: hidden;
        justify-content: center;
        align-items: center;
      }

      main::before {
        content: '';
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        background-image: url(https://github.com/AndyWang505/link/blob/main/img/Suisei03.png?raw=true);
        background-position: center;
        background-size: cover;
        background-attachment: fixed;
        background-repeat: no-repeat;
        will-change: transform, opacity;
        transform: scale(1);
        transition:
          transform 0.2s ease-in-out,
          opacity 0.6s ease-in-out;
        z-index: -1;
        opacity: 0;
      }

      main.loaded::before {
        opacity: 1;
      }

      /* Keyframes animation */
      @keyframes increase {
        0% {
          transform: scale(1);
        }
        100% {
          transform: scale(1.5);
        }
      }

      /* Apply animation to main::before */
      main::before {
        animation: increase 60s linear infinite;
      }

      section {
        position: absolute;
        padding: 2rem;
        margin: 0 0.3rem;
        backdrop-filter: blur(10px);
        background-color: transparent;
        border: 1.5px solid rgb(230, 230, 230);
        border-radius: 10px;
        z-index: 100;
        opacity: 0;
        transform: translateY(20px);
        transition:
          opacity 0.8s ease-in-out,
          transform 0.8s ease-in-out;
      }

      main.loaded section {
        opacity: 1;
        transform: translateY(0);
        transition-delay: 0.3s;
      }

      header {
        text-align: center;
      }

      header img {
        border-radius: 9999px;
        width: 6rem;
        height: 6rem;
      }

      header h1 {
        font-size: 1.5em;
        margin: 8px auto;
      }

      .address {
        margin-bottom: 12px;
      }

      .address i {
        margin-right: 0.6rem;
      }

      li {
        margin: 2rem auto;
      }

      li a {
        display: flex;
        align-items: center;
        justify-content: center;
      }

      li h2 {
        padding: 0 0.6rem;
      }

      li i {
        font-size: 26px;
      }

      a:hover h2,
      a:hover i {
        color: rgb(95, 95, 95);
      }

      footer {
        text-align: center;
      }

      canvas {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
      }

      header p,
      h1 {
        font-style: italic;
      }

      /* 手機版換行設定 */
      .mobile-break {
        display: none;
      }

      @media (max-width: 768px) {
        .mobile-break {
          display: inline;
        }

        section {
          padding: 1.5rem;
          margin: 0 1rem;
          min-width: calc(100vw - 3rem); /* 確保最小寬度 */
          max-width: calc(100vw - 2rem);
        }

        header p {
          line-height: 1.6;
          text-align: center;
        }
      }
    </style>
  </head>
  <body>
    <main>
      <section id="app">
        <header>
          <img
            src="https://avatars.githubusercontent.com/u/71600455?v=4"
            alt="head shot"
            width="96"
            height="96"
            loading="eager"
            fetchpriority="high"
          />
          <h1>AndyWang</h1>
          <p class="address">
            <i class="fa-solid fa-location-dot"></i>Taiwan, Hsinchu City
          </p>
          <p>Hi, you can call me Weiwei.<br class="mobile-break"> I enjoy solving problems.</p>
        </header>
        <ul>
          <li>
            <a href="https://andywangtw.dev" target="_blank">
              <i class="fa-solid fa-code"></i>
              <h2>Blog</h2>
            </a>
          </li>
          <li>
            <a href="https://github.com/AndyWang505" target="_blank">
              <i class="fa-brands fa-github"></i>
              <h2>GitHub</h2>
            </a>
          </li>
          <li>
            <a href="https://x.com/andywang890505" target="_blank">
              <i class="fa-brands fa-twitter"></i>
              <h2>Twitter</h2>
            </a>
          </li>
          <li>
            <a href="https://www.youtube.com/@chengwei55" target="_blank">
              <i class="fa-brands fa-youtube"></i>
              <h2>YouTube</h2>
            </a>
          </li>
          <li>
            <a href="https://www.pixiv.net/users/39278115" target="_blank">
              <i class="fa-brands fa-pixiv"></i>
              <h2>Pivix</h2>
            </a>
          </li>
          <li>
            <a href="mailto:andywang890505@gmail.com" target="_blank">
              <i class="fa-solid fa-envelope"></i>
              <h2>Email</h2>
            </a>
          </li>
        </ul>
        <footer>Copyright © 2024 - AndyWang.</footer>
      </section>
    </main>
    <canvas id="starryCanvas"></canvas>

    <script is:inline lang="ts">
      // Starry background animation
      const canvas = document.getElementById('starryCanvas');
      const ctx = canvas.getContext('2d');

      // Set canvas size
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;

      // Array to store stars
      const stars = [];
      const numStars = 500; // Number of stars

      function createStar() {
        return {
          x: Math.random() * canvas.width,
          y: Math.random() * canvas.height,
          size: Math.random() * 1.5 + 0.5, // Size of the star
          speed: Math.random() * 0.2 + 0.1, // Falling speed (slower)
          opacity: Math.random() * 0.5 + 0.5, // Random opacity (between 0.5 and 1)
        };
      }

      // Initialize stars
      for (let i = 0; i < numStars; i++) {
        stars.push(createStar());
      }

      function drawStars() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);

        stars.forEach((star) => {
          ctx.beginPath();
          ctx.arc(star.x, star.y, star.size, 0, Math.PI * 2);
          ctx.fillStyle = `rgba(255, 255, 255, ${star.opacity})`; // Apply opacity
          ctx.fill();
        });
      }

      function updateStars() {
        stars.forEach((star) => {
          star.y += star.speed; // Move the star downwards
          if (star.y > canvas.height) {
            // Reset the star to the top if it goes off screen
            star.y = 0;
            star.x = Math.random() * canvas.width;
            star.size = Math.random() * 1.5 + 0.5; // Random size
            star.speed = Math.random() * 0.2 + 0.1; // Random speed
            star.opacity = Math.random() * 0.5 + 0.5; // Random opacity
          }
        });
      }

      function animate() {
        drawStars();
        updateStars();
        requestAnimationFrame(animate);
      }

      animate(); // Start the animation

      // Adjust canvas size on window resize
      window.addEventListener('resize', () => {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
      });

      // Background image fade-in effect with faster loading
      const mainElement = document.querySelector('main');
      if (mainElement) {
        const backgroundImage = new Image();
        backgroundImage.src =
          'https://github.com/AndyWang505/link/blob/main/img/Suisei03.png?raw=true';

        if (backgroundImage.complete) {
          mainElement.classList.add('loaded');
        } else {
          backgroundImage.onload = () => {
            mainElement.classList.add('loaded');
          };
          backgroundImage.onerror = () => {
            mainElement.classList.add('loaded');
          };
          setTimeout(() => {
            if (!mainElement.classList.contains('loaded')) {
              mainElement.classList.add('loaded');
            }
          }, 2000);
        }
      }
    </script>
  </body>
</html>
